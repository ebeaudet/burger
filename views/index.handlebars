<div class='container'>
    <div class="jumbotron">
        <h1 class="text-center">EAT DA BURGER!!!</h1>
        <div class="text-center">
            <img src="/assets/img/burger.png" class="rounded" alt="...">
        </div>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 new-burgers">
                    <ul>
                        {{#each burger}}
                        {{#unless devoured}}
                        <div class="row">
                            <button type="button" class="eat-burger btn btn-sm" id="btnDevourBurger"
                                data-id="{{this.id}}" data-burgerDevoured="{{devour}}">Devour!</span></button>
                            <span><strong>{{this.burger_name}} </strong></span>
                        </div>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>

                <div class="col-md-6 devoured-burgers justify-content-center">

                    <ul>
                        {{#each burger}}
                        {{#if devoured}}
                        <div class="row">
                            <span><strong>{{this.burger_name}} </strong></span>
                            <label for="lblDevourBurger"></label>
                            <button type="button" class="removeBurbger btn btn-sm" id="btnRemoveBurger"
                                data-id="{{this.id}}">Trash</button>
                        </div>
                        {{/if}}
                        {{/each}}
                    </ul>

                </div>
            </div>

            <div class="row justify-content-center">
                <form>
                    <div class="form-group">
                        <label for="lblNewBurger">New Burger</label>
                        <input type="text" id="newBurger" name="burger">
                        <button type="submit" class="btn" id="btnNewBurger">Add New Burger</button>
                    </div>
                </form>
            </div>
        </div>
    </div>