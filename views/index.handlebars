<div class='container'>
    <div class="row">
        <div class="col-md-12">
            <img
                src="https://friendlystock.com/wp-content/uploads/2018/04/22-shocked-hamburger-emoji-cartoon-clipart.jpg" />
            <H1>EAT DA BURGER!!!</H1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 new-burgers">
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                <button type="button" class="eatburger btn btn-warning" id="btnDevourBurger" data-id="{{this.id}}"
                    data-burgerDevoured="{{devour}}"></span></button>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6 devoured-burgers">
            <ul>
                {{#each burger}}
                {{#if devoured}}
                <label for="lblDevourBurger">Trash Burger</label>
                <button type="button" class="removeBurger btn" id="btnRemoveBurger"></button>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <form>
            <div class="form-group">
                <label for="lblNewBurger">New Burger</label>
                <input type="text" id="newburger" name="burger">
                <button typ="submit" class="btn" id="btnNewBurger">Add New Burger</button>
            </div>
        </form>
    </div>
</div>